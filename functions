## Z Shell - zsh - functions only:

# Is this shell a 'login shell'?
loginshell()
  {
    local login
    local inter
    if [[ -o login ]]; then
      login="Login"
    else
      login="Non-login"
    fi
    if [[ -o interactive ]]; then
      inter="Interactive"
    else
      inter="Non-interactive"
    fi
    echo "Shell is ${login} ${inter}"
  }
  export -f loginshell

# exit 0
